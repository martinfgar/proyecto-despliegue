
upstream laravelapi {
    server laravel-api:80;
}

server {
    listen 443 ssl;

    ssl on;
    ssl_certificate         /etc/nginx/ssl/server.crt;
    ssl_certificate_key     /etc/nginx/ssl/server.key;

    location /api{ 
        proxy_pass http://laravelapi/api;
    }
    location / {
        proxy_pass http://frontend;
    }
 }
